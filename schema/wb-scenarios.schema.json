{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Automation scenarios",
  "configFile": {
    "path": "/etc/wb-scenarios.conf",
    "service": "wb-rules"
  },
  "definitions": {
    "scenario": {
      "title": "Scenario",
      "headerTemplate": "{{ self.name }}",
      "oneOf": [
        {
          "$ref": "#/definitions/devicesControl"
        }
      ],
      "_format": "wb-multiple",
      "options": {
        "keep_oneof_values": false,
        "disable_collapse": true,
        "disable_edit_json": true,
        "disable_properties": true,
        "wb": {
          "disable_panel": true
        }
      }
    },
    "devicesControl": {
      "title": "Devices control",
      "type": "object",
      "description": "devicesControl_description",
      "_format": "grid",
      "properties": {
        "scenarioType": {
          "type": "string",
          "enum": [
            "devicesControl"
          ],
          "default": "devicesControl",
          "options": {
            "hidden": true
          }
        },
        "enable": {
          "title": "Enable",
          "type": "boolean",
          "default": true,
          "_format": "checkbox",
          "propertyOrder": 1,
          "options": {
            "grid_columns": 12
          }
        },
        "name": {
          "title": "Scenario name",
          "type": "string",
          "default": "Управление устройствами",
          "minLength": 1,
          "maxLength": 30,
          "propertyOrder": 2,
          "options": {
            "grid_columns": 12
          }
        },
        "id_prefix": {
          "title": "ID Prefix",
          "type": "string",
          "description": "Одно слово на английском языке исключая: пробел, /, +, #. Длина до 15 символов.",
          "_pattern_comment": "Запрещает пробелы, /, +, и #, а также ограничивает строку использованием только цифр, нижнего подчеркивания и английских букв",
          "pattern": "^[0-9a-zA-Z_]+$",
          "default": "devices_control",
          "minLength": 1,
          "maxLength": 15,
          "propertyOrder": 3,
          "options": {
            "grid_columns": 12
          }
        },
        "inControls": {
          "title": "Input controls",
          "type": "array",
          "minItems": 1,
          "propertyOrder": 4,
          "_title_note": "When options-> compact: true - this title not shown",
          "description": "List of tracked input controls, each configured to respond to a specific type of event.<br><b>'OR'</b> logic is applied: When a specified event is registered on any of the input controls - all outputs are triggered to change",
          "_format": "table",
          "options": {
            "disable_collapse": true,
            "grid_columns": 12,
            "array_controls_top": true,
            "disable_array_delete_last_row": true,
            "disable_array_reorder": true,
            "wb": {
              "disable_panel": true
            }
          },
          "items": {
            "title": "Input control",
            "type": "object",
            "properties": {
              "control": {
                "type": "string",
                "propertyOrder": 1,
                "title": "Input control topic name",
                "description": "In format: 'device/control'",
                "pattern": "^[^/+#]+/[^/+#]+$",
                "_format": "wb-autocomplete",
                "options": {
                  "wb": {
                    "data": "devices"
                  }
                },
                "_minLength_note": "Device name (1) + slash (1) + topic name (1)",
                "minLength": 3
              },
              "behaviorType": {
                "type": "string",
                "propertyOrder": 2,
                "title": "Event Type",
                "enum": [
                  "whenChange",
                  "whenDisabled",
                  "whenEnabled"
                ],
                "default": "whenChange",
                "options": {
                  "enum_titles": [
                    "When Change",
                    "When Disabled (switch)",
                    "When Enabled (switch)"
                  ]
                }
              }
            },
            "required": [
              "control",
              "behaviorType"
            ]
          }
        },
        "outControls": {
          "type": "array",
          "minItems": 1,
          "propertyOrder": 5,
          "_title_note": "When options-> compact: true - this title not shown",
          "title": "Output controls",
          "description": "List of modifiable output controls, each configured for a specific type of action.<br>Upon activation, all specified controls undergo changes",
          "_format": "table",
          "options": {
            "disable_collapse": true,
            "grid_columns": 12,
            "array_controls_top": true,
            "disable_array_delete_last_row": true,
            "disable_array_reorder": true,
            "wb": {
              "disable_panel": true
            }
          },
          "items": {
            "title": "Output control",
            "type": "object",
            "properties": {
              "control": {
                "type": "string",
                "propertyOrder": 1,
                "title": "Output control topic name",
                "description": "In format: 'device/control'",
                "pattern": "^[^/+#]+/[^/+#]+$",
                "_format": "wb-autocomplete",
                "options": {
                  "wb": {
                    "data": "devices"
                  }
                },
                "_minLength_note": "Device name (1) + slash (1) + topic name (1)",
                "minLength": 3
              },
              "behaviorType": {
                "type": "string",
                "propertyOrder": 2,
                "title": "Action Type",
                "enum": [
                  "toggle",
                  "setEnable",
                  "setDisable",
                  "setValue",
                  "increaseValueBy",
                  "decreaseValueBy"
                ],
                "default": "setDisable",
                "options": {
                  "enum_titles": [
                    "Toggle (switch)",
                    "Enable (switch)",
                    "Disable (switch)",
                    "Set Value",
                    "Increase Value By",
                    "Decrease Value By"
                  ]
                }
              },
              "actionValue": {
                "type": "number",
                "propertyOrder": 3,
                "title": "Value For Action",
                "description": "Used for 'setNewValue', 'increaseValueBy', 'decreaseValueBy'",
                "default": 0
              }
            },
            "required": [
              "control",
              "behaviorType"
            ]
          }
        }
      },
      "required": [
        "scenarioType",
        "enable",
        "name",
        "id_prefix",
        "inControls",
        "outControls"
      ]
    }
  },
  "properties": {
    "scenarios": {
      "type": "array",
      "title": "Scenarios",
      "items": {
        "$ref": "#/definitions/scenario"
      },
      "options": {
        "disable_collapse": true,
        "disable_array_reorder": true,
        "disable_array_delete_last_row": true,
        "enable_array_copy": true
      },
      "_format": "tabs"
    }
  },
  "required": [
    "scenarios"
  ],
  "options": {
    "wb": {
      "disable_title": true
    }
  },
  "translations": {
    "en": {
      "devicesControl_description": "The script allows you to control one or more devices.<br>It is suitable for managing lighting, curtains, and other devices."
    },
    "ru": {
      "Automation scenarios": "Сценарии автоматизации",
      "Scenarios": "Сценарии",
      "Scenario": "Сценарий",
      "Scenario name": "Название сценария",
      "devicesControl_description": "Сценарий позволяет управлять одним или несколькими устройствами.<br>Применим для управления освещением, шторами и другими устройствами.",
      "Name": "Имя",
      "Optional": "Не обязательно",
      "Devices control": "Управление устройствами",
      "Enable": "Активен",
      "Input control": "Входной контрол",
      "Input controls": "Входные контролы",
      "List of tracked input controls, each configured to respond to a specific type of event.<br><b>'OR'</b> logic is applied: When a specified event is registered on any of the input controls - all outputs are triggered to change": "Список отслеживаемых входных контроллов, каждый из которых настроен на реагирование на определённый тип события.<br>Применяется логика <b>'ИЛИ'</b>: При регистрации заданного события на любом из входных контролов - запускается изменение всех выходов",
      "Input control topic name": "Имя топика входного контрола",
      "Event Type": "Тип события",
      "When Change": "Когда изменится",
      "When Disabled (switch)": "Когда отключилось (для переключателей)",
      "When Enabled (switch)": "Когда включилось (для переключателей)",
      "Output control": "Выходной контрол",
      "Output controls": "Выходные контролы",
      "List of modifiable output controls, each configured for a specific type of action.<br>Upon activation, all specified controls undergo changes": "Список изменяемых выходных контролов, каждый из которых настроен на конкретный тип действия.<br>При активации все указанные контролы подвергаются изменениям",
      "Output control topic name": "Имя топика выходного контрола",
      "In format: 'device/control'": "В формате: 'устройство/контрол'",
      "Action Type": "Тип действия",
      "Toggle (switch)": "Переключить (для переключателей)",
      "Enable (switch)": "Включить (для переключателей)",
      "Disable (switch)": "Выключить (для переключателей)",
      "Set Value": "Установить значение",
      "Increase Value By": "Увеличить значение на",
      "Decrease Value By": "Уменьшить  значение на",
      "Value For Action": "Значение для действия"
    }
  }
}
